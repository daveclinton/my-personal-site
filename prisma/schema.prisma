generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url  	    = env("DATABASE_URL")
}

model VisitorCount {
  id Int @id @default(autoincrement())
  count Int @default(0)
}

model Subscriber {
  id String @id @default(cuid())
  email String @unique
  createdAt DateTime @default(now())
}

model EmailSubs {
  id String @id @default(cuid())
  email String @unique
  createdAt DateTime @default(now())
}

model Analytics {
  id        Int      @id @default(autoincrement())
  date      DateTime @default(now())
  title     String?
  slug      String
  referrer  String?
  flag      String?
  country   String?
  city      String?
  latitude  Float?
  longitude Float?
}

model LocationData {
  id        Int     @id @default(autoincrement())
  ip        String?
  city      String?
  region    String?
  country   String?
  latitude  Float?
  longitude Float?
  org       String?
  postal    String?
  timezone  String?
  createdAt DateTime @default(now())
}